@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>
</head>
<body class="body">
    <header>
        <div class="container">
            <div class="header__container">
                <div class="header__logo">
                    <img class="header__logo-img" src="~/img/address-book.png" alt="картинка телефонной книжки">
                </div>
                <h1 class="header__h1">
                    Телефонная книжка
                </h1>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="main-container">
                <table class="table">

                   @foreach (var p in Model)
                    {
                    <tr class="table__row">

                        <td class="table__data table__data-id"><a href="~/Home/Contact/@p.Id">@(p.Id)</a></td>
                        <td class="table__data table__data-first-name">@(p.FirstName)</td>
                        <td class="table__data table__data-last-name">@(p.LastName)</td>
                        <td class="table__data table__data-img"><img class="table__img" src="~/img/@(p.Id).png"></td>
                    </tr>
                    }
                </table>
            </div>
        </div>

    </main>

</body>
</html>

